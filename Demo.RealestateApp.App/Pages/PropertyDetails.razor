@page "/addProperty"

<h3 class="mb-5">New Property</h3>

@Message

<EditForm Model="@PropertyViewModel" OnValidSubmit="@HandleValidSubmit">

    
    
    <div class="row mb-3 ms-2">
        <label for="name" class="col-sm-3 form-label">Category name:</label>
        <div class="col-sm-5">
            <InputText id="name" class="form-control" @bind-Value="@PropertyViewModel.ProductTitle" placeholder="Enter category name"></InputText>
            <ValidationMessage For="@(() => PropertyViewModel.ProductTitle)" />
        </div>
    </div>

    <button type="submit" class="submit-button mt-3">Save category</button>
</EditForm>